<div class="container">
      <div class="col-sm-12 news">
           <div class="card" data-aos="fade-up">
          <div class="card-body">
            <div class="row">
            <div class="col-sm-10">
            <h1 class="font-weight-600 mb-4">{{data.description}}</h1>
           
            </div>
            </div>
            <div class="row">
                <div class="col-lg-10 img">
                  <img src="images/news/{{data.urlToImage}}" alt="image"/>
                  <p class="fs-13 text-muted mb-0">{{data.author}} for NEH</p>
                </div>
                <div class="col-lg-2"> 
                  <div class="share-btn" data-url="https://www.neherald.com/{{data.url}}" data-title="{{data.title}}" data-desc="{{data.description}}">
                   <div class="row">
                     <div class="col-lg-12 mt-4 mb-4 social-btn">
                         <a class="btn-facebook" data-id="fb"><i class="mdi mdi-facebook"></i>Facebook</a>
                     </div>
                   </div>  
                    <div class="row">
                     <div class="col-lg-12 mb-4 social-btn">
                        <a class="btn-twitter" data-id="tw"><i class="mdi mdi-twitter"></i> Twitter</a>
                     </div>
                   </div>  
                    <div class="row">
                     <div class="col-lg-12 mb-4 social-btn">
                         <a class="btn-telegram" data-id="tg"><i class="mdi mdi-telegram"></i> Telegram</a>
                     </div>
                   </div>  
                    <div class="row">
                     <div class="col-lg-12  social-btn">
                          <a class="btn-mail" data-id="mail"><i class="mdi mdi-at"></i> EMail</a>
                     </div>
                   </div>   
                   </div>      
                
               </div>
                
            </div>
            <div class="row">
<div class="col-lg-12"><br></div>
            </div>
            <div class="row">
               <div class="col-lg-12">
               <p class="fs-13 text-muted mb-0">By {{data.author}}, published on {{data.publishedAt}}</p>
               <hr>
               </div>
              
            </div>
            <div class="row">
               <div class="col-lg-8">
                      <div>{{{data.content}}}</div>
               </div>
             <div class="col-lg-4">
               <h2>Related News</h2>
              
                 <div class="row">
                        <div class="col-sm-12">
                          <div class="border-bottom pb-4 pt-4">
                            <div class="row">
                              <div class="col-sm-8">
                                <h5 class="font-weight-600 mb-1">
                                  Ways to stay social online while in self..
                                </h5>
                                <p class="fs-13 text-muted mb-0">
                                  <span class="mr-2">Photo </span>10 Minutes ago
                                </p>
                              </div>
                              <div class="col-sm-4">
                                <div class="rotate-img">
                                  <img
                                    src="/images/politics/Politics_1.jpg"
                                    alt="banner"
                                    class="img-fluid"
                                  />
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>

                        <div class="row">
                        <div class="col-sm-12">
                          <div class="border-bottom pb-4 pt-4">
                            <div class="row">
                              <div class="col-sm-8">
                                <h5 class="font-weight-600 mb-1">
                                  Premier League players join charity..
                                </h5>
                                <p class="fs-13 text-muted mb-0">
                                  <span class="mr-2">Photo </span>10 Minutes ago
                                </p>
                              </div>
                              <div class="col-sm-4">
                                <div class="rotate-img">
                                  <img
                                    src="/images/politics/Politics_2.jpg"
                                    alt="banner"
                                    class="img-fluid"
                                  />
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
             </div>
            </div>
            </div>
         </div>
      </div>
         <div class="col-sm-12 mt-5">
              <div class="card" data-aos="fade-up">
                <div class="card-body">
                  <div class="aboutus-wrapper">
                    <h1 class="mt-5 text-center mb-5">
                      Comments
                    </h1>
                    <div class="row">
                      <div class="col-lg-12 mb-5 mb-sm-2">
                        <form>
                          <div class="row">
                            <div class="col-sm-12">
                              <div class="form-group">
                                <textarea
                                  class="form-control textarea"
                                  placeholder="Comment *"
                                  id="message"
                                ></textarea>
                              </div>
                            </div>
                          </div>
                          <div class="row">
                            <div class="col-sm-6">
                              <div class="form-group">
                                <input
                                  type="text"
                                  class="form-control"
                                  id="name"
                                  aria-describedby="name"
                                  placeholder="Name *"
                                />
                              </div>
                            </div>
                            <div class="col-sm-6">
                              <div class="form-group">
                                <input
                                  type="email"
                                  class="form-control"
                                  id="email"
                                  aria-describedby="email"
                                  placeholder="Email *"
                                />
                              </div>
                            </div>
                          </div>

                          <div class="row">
                            <div class="col-sm-12">
                              <div class="form-group">
                                <a
                                  href="#"
                                  class="btn btn-lg btn-dark font-weight-bold mt-3"
                                  >Send Message</a
                                >
                              </div>
                            </div>
                          </div>
                        </form>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
     
</div>